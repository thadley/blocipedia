<h1>New Wiki</h1>

  <div class="form-group">
    
    <%= form_for @wiki do |f| %>
      <%= f.text_field :title, class: 'form-control', placeholder: 'Title' %>
      <%= f.text_area :body, rows: 12, class: 'form-control', placeholder: 'Body' %>

     <% if policy(@wiki).private? %>
      <%= f.label :private %>
      <%= f.check_box :private %>
     <% end %>
      
      <%= f.submit 'Save', class: 'btn btn-info' %>
    <% end %>

  </div>